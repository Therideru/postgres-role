# Connection settings
max_connections = 200

# Memory settings
shared_buffers = 256MB
effective_cache_size = 768MB
maintenance_work_mem = 64MB
work_mem = 4MB

# WAL settings
wal_level = replica
synchronous_commit = on
archive_mode = on
archive_command = '/bin/true'

# Replication settings
max_wal_senders = 10
wal_keep_size = 64